<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/local_nv_networking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Networking"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_addressing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Addressing"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_rf_interfacing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="RF Interfacing"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_security"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Security"
            android:textColor="@color/color_tab_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_nv_serial_interfacing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Serial Interfacing"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_sleep_modes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Sleep Modes"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_io_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="I/O Settings"
            android:textColor="@color/color_tab_text" />

        <TextView
            android:id="@+id/local_nv_diagnostic_commands"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Diagnostic Commands"
            android:textColor="@color/color_tab_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <SearchView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:queryHint="输入名称"
            android:iconifiedByDefault="false">
        </SearchView>

        <Button
            android:layout_width="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_plus"
            android:background="?attr/selectableItemBackground"/>

        <Button
            android:layout_width="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_minus"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>