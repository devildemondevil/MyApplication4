<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.LocalFragment">

<!--    <com.aspsine.fragmentnavigator.demo.ui.widget.LocalTabLayout-->
<!--        android:id="@+id/tabLayoutLocal"-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="@android:color/white"-->
<!--        android:elevation="2dp"-->
<!--        android:layout_height="118dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="30dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/local_nv_networking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Networking"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_addressing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Addressing"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_rf_interfacing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="RF Interfacing"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_security"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Security"
            android:textColor="@drawable/selector_text_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/local_nv_serial_interfacing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Serial Interfacing"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_sleep_modes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Sleep Modes"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_io_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="I/O Settings"
            android:textColor="@drawable/selector_text_color" />

        <TextView
            android:id="@+id/local_nv_diagnostic_commands"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_text_radius"
            android:gravity="center"
            android:text="Diagnostic Commands"
            android:textColor="@drawable/selector_text_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="85dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <SearchView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:queryHint="输入名称"
            android:iconifiedByDefault="false">
        </SearchView>

        <Button
            android:id="@+id/local_nv_btn_plus"
            android:layout_width="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_plus"
            android:background="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/local_nv_btn_minus"
            android:layout_width="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_minus"
            android:background="?attr/selectableItemBackground"/>

    </LinearLayout>

    <View
        android:layout_marginTop="135dp"
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#000000" />

<!--    <FrameLayout-->
<!--        android:id="@+id/childContainer"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"/>-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
